# top-most EditorConfig file
root = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{php,js,json,html,css,less,scss,xml,txt}]
charset = utf-8

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.json]
indent_style = tab
indent_size = 4