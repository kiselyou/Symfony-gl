
<div class="row row_sm">

    <div class="col_xs_1 col_sm_2 col_md_3 col_lg_4"></div>

    <div class="col_xs_10 col_sm_8 col_md_6 col_lg_4">
        <div class="row row_sm">Volume Settings</div>
        <form>

            <div class="row row_md">
                <div class="col_xs_12 col_sm_12 col_md_12 col_lg_12">
                    <label for="menu_volume">
                        <i class="fa fa-volume-up" aria-hidden="true"></i>
                        Menu:
                    </label>
                    <input type="range" min="0" max="100" step="1" value="50" id="menu_volume">
                </div>
            </div>

            <div class="row row_md">
                <div class="col_xs_12 col_sm_12 col_md_12 col_lg_12">
                    <label for="tab_volume">
                        <i class="fa fa-volume-up" aria-hidden="true"></i>
                        Tab:
                    </label>
                    <input type="range" min="0" max="100" step="1" value="50" id="tab_volume">
                </div>
            </div>

            <div class="row row_md">
                <div class="col_xs_12 col_sm_12 col_md_12 col_lg_12">
                    <label for="effects_volume">
                        <i class="fa fa-volume-up" aria-hidden="true"></i>
                        Game Effects:
                    </label>
                    <input type="range" min="0" max="100" step="1" value="50" id="effects_volume">
                </div>
            </div>

            <div class="row row_md">
                <div class="col_xs_12 col_sm_12 col_md_12 col_lg_12">
                    <label for="environment_volume">
                        <i class="fa fa-volume-up" aria-hidden="true"></i>
                        Game Environment:
                    </label>
                    <input type="range" min="0" max="100" step="1" value="50" id="environment_volume">
                </div>
            </div>

            <div class="row row_md">
                <div class="col_xs_4 col_sm_4 col_md_4 col_lg_4">
                    <label for="switch_sounds" class="checkbox">
                        <i class="fa fa-volume-off"></i>
                        Torn off:
                    </label>
                    <input type="checkbox" name="switch_sounds" id="switch_sounds">
                </div>
            </div>

        </form>
    </div>

    <div class="col_xs_1 col_sm_2 col_md_3 col_lg_4"></div>

</div>