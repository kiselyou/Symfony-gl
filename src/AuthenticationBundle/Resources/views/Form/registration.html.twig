{% extends 'base.html.twig' %}

{% set _token = form._token.vars %}
{% set email = form.email.vars %}
{% set username = form.username.vars %}
{% set password = form.password.vars %}
{% set confirmPassword = form.confirmPassword.vars %}

{% block stylesheets %}

    {{ parent() }}
    <link href="{{ asset('css/theme-galaxy.css') }}" rel="stylesheet" />

{% endblock %}

{% block body %}

    {% trans_default_domain 'auth' %}

    <div class="sw-modal sw-modal-size-6 well-sm">

        <div class="sw-modal-head">

            <div class="pull-left">
                <a href="{{ path('iw') }}">IW (ONLINE)</a>
            </div>

            <div class="pull-right">
                <a href="{{ path('_login') }}" class="sw-link">
                    <i class="glyphicon glyphicon-forward"></i>
                    {{ '_LOGIN'|trans }}
                </a>
            </div>

        </div>

        <div class="sw-modal-body">

            {{ form_start(form, {'attr': {'id': 'form'}}) }}

                <div class="row">
                    <div class="col-lg-6">

                        <div class="form-group">
                            <label for="{{ username.id }}"> {{ username.label|trans }} </label>
                            <span class="sw-star">*</span>
                            <div class="sw-field input-group sw-input-status">
                                <span class="input-group-addon sw-status-error">
                                    <i class="glyphicon glyphicon-user"></i>
                                </span>

                                <input type="text" class="form-control sw-status-error" required name="{{ username.full_name }}" id="{{ username.id }}" placeholder="Username" autocomplete="off" value="{{ username.value }}">
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-6">

                        <div class="form-group">
                            <label for="{{ email.id }}"> {{ email.label|trans }} </label>
                            <span class="sw-star">*</span>
                            <div class="sw-field input-group">
                                <span class="input-group-addon sw-status-success">
                                    <i class="glyphicon glyphicon-envelope"></i>
                                </span>
                                <input type="text" class="form-control sw-status-success" required name="{{ email.full_name }}" id="{{ email.id }}" placeholder="Email" autocomplete="off" value="{{ email.value }}">
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">

                        <div class="form-group">
                            <label for="{{ password.id }}"> {{ password.label|trans }} </label>
                            <span class="sw-star">*</span>
                            <div class="sw-field input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-lock"></i>
                                </span>
                                <input type="password" class="form-control" required name="{{ password.full_name }}" id="{{ password.id }}" placeholder="********" autocomplete="off">
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-6">

                        <div class="form-group">
                            <label for="{{ confirmPassword.id }}"> {{ confirmPassword.label|trans }} </label>
                            <span class="sw-star">*</span>
                            <div class="sw-field input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-lock"></i>
                                </span>
                                <input type="password" class="form-control" required name="{{ confirmPassword.full_name }}" id="{{ confirmPassword.id }}" placeholder="********" autocomplete="off">
                            </div>
                        </div>

                    </div>
                </div>


                <div class="form-group">

                    <div class="pull-right">
                        <button type="button" class="sw-btn btn-xs" id="_send_form">
                            <i class="glyphicon glyphicon-save"></i>
                            {{ '_REGISTRATION'|trans }}
                        </button>
                    </div>

                </div>

                <div class="clearfix"></div>

                <div class="row">
                    <div class="col-lg-12">

                        <ul class="sw-block-errors sw-text-error" id="_error">
                        {% for error in errors %}
                            <li><i class="glyphicon glyphicon-exclamation-sign"></i> {{ error.propertyPath|capitalize }}: {{ error.message }}</li>
                        {% endfor %}
                        </ul>

                    </div>
                </div>

                <div hidden="hidden" class="hidden">
                    <input type="text" name="{{ _token.full_name }}" id="{{ _token.id }}" value="{{ _token.value }}">
                </div>

            {{ form_end(form, {'render_rest': false}) }}

        </div>

    </div>

{% endblock %}

{% block javascripts %}

    {% trans_default_domain 'auth' %}
    {{ parent() }}

    <script>
        document.getElementById('_send_form').addEventListener('click', function () {

            var _error = document.getElementById('_error');
            var _email = document.getElementById('{{ email.id }}').value;
            var _username = document.getElementById('{{ username.id }}').value;
            var _password = document.getElementById('{{ password.id }}').value;
            var _confirmPassword = document.getElementById('{{ confirmPassword.id }}').value;

            var messages = [];
            if (_username.length < 6) {
                messages.push('{{ username.label|trans }} - at least 6 symbol');
            }

            if (_email.length < 6) {
                messages.push('{{ email.label|trans }} - at least 6 symbol');
            }

            if (_password.length < 6) {
                messages.push('{{ password.label|trans }} - at least 6 symbol');
            }

            if (_confirmPassword != _password) {
                messages.push('{{ 'Confirm of passwords are not the same.' }}');
            }

            if (messages.length == 0) {
                document.getElementById('form').submit();
            } else {
                _error.innerHTML = '';
                for (var i = 0; i < messages.length; i++) {
                    var li = document.createElement('li');
                    var gl = document.createElement('i');
                    var span = document.createElement('span');
                    span.innerHTML = ' ' + messages[i];
                    gl.classList.add('glyphicon');
                    gl.classList.add('glyphicon-exclamation-sign');
                    li.appendChild(gl);
                    li.appendChild(span);
                    _error.appendChild(li);
                }
            }
        });
    </script>

{% endblock %}