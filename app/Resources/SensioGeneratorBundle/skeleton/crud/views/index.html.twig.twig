{% block extends %}
{{ "{% extends 'conteiner.html.twig' %}" }}
{% endblock extends %}

{% block body %}
{{ "{% block content %}" }}

    <div class="page-header">
        <h1>{{ entity_pluralized|capitalize }} list</h1>
    </div>

    {{ "{% set params = null %}" }}
    {{ "{% if pagination is defined %}" }}
        {{ "{% set params = { 'back': pagination.page } %}" }}
    {{ "{% endif %}" }}

    {% if 'new' in actions -%}
        <div class="clearfix well-sm">
            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-left">
                <a href="{{ "{{ path('" ~ route_name_prefix ~ "_new', params) }}" }}" class="btn-theme btn btn-default group-tooltip" title="Create a new {{ entity_singularized }}" data-placement="right">
                    <i class="glyphicon glyphicon-file"></i>
                    New
                </a>
            </div>
        </div>
    {%- endif %}

    <div class="clearfix well-sm">
        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-left">
            <div class="table-responsive">
                <table class="table table-responsive table-striped table-hover">
                    <thead>
                        <tr>
                        {%- for field, metadata in fields %}

                            <th>{{ field|capitalize }}</th>

                        {%- endfor %}

                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{ '{% for ' ~ entity_singularized ~ ' in ' ~ entity_pluralized ~ ' %}' }}
                        <tr>

                    {%- for field, metadata in fields %}
                        {%- if loop.first and ('show' in actions) %}

                            <td><a href="{{ "{{ path('" ~ route_name_prefix ~ "_show', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}">{{ '{{ ' ~ entity_singularized ~ '.' ~ field|replace({'_': ''}) ~ ' }}' }}</a></td>

                        {%- elseif metadata.type in ['datetime'] %}

                            <td>{{ '{% if ' ~ entity_singularized ~ '.' ~ field|replace({'_': ''}) ~ ' %}{{ ' ~ entity_singularized ~ '.' ~ field|replace({'_': ''}) ~ '|date(\'Y-m-d H:i:s\') }}{% endif %}' }}</td>

                        {%- elseif metadata.type in ['date'] %}

                            <td>{{ '{% if ' ~ entity_singularized ~ '.' ~ field|replace({'_': ''}) ~ ' %}{{ ' ~ entity_singularized ~ '.' ~ field|replace({'_': ''}) ~ '|date(\'Y-m-d\') }}{% endif %}' }}</td>

                        {%- elseif metadata.type in ['time'] %}

                            <td>{{ '{% if ' ~ entity_singularized ~ '.' ~ field|replace({'_': ''}) ~ ' %}{{ ' ~ entity_singularized ~ '.' ~ field|replace({'_': ''}) ~ '|date(\'H:i:s\') }}{% endif %}' }}</td>

                        {%- elseif metadata.type in ['array'] %}

                            <td>{{ '{% if ' ~ entity_singularized ~ '.' ~ field|replace({'_': ''}) ~ ' %}{{ ' ~ entity_singularized ~ '.' ~ field|replace({'_': ''}) ~ '|join(\', \') }}{% endif %}' }}</td>

                        {%- elseif metadata.type in ['boolean'] %}

                            <td>{{ '{% if ' ~ entity_singularized ~ '.' ~ field|replace({'_': ''}) ~ ' %}Yes{% else %}No{% endif %}' }}</td>

                        {%- else %}

                            <td>{{ '{{ ' ~ entity_singularized ~ '.' ~ field|replace({'_': ''}) ~ ' }}' }}</td>

                        {%- endif %}

                        {%- if loop.last %}

                            <td>
                                <div class="btn-group btn-group-sm" style="min-width: 70px">

                                {%- for action in record_actions %}

                                    {{ "{% set params = { 'id': " ~ entity_singularized ~ "."~ identifier ~" } %}" }}

                                    {{ "{% if pagination is defined %}" }}
                                        {{ "{% set params = { 'id': " ~ entity_singularized ~ "."~ identifier ~", 'back': pagination.page } %}" }}
                                    {{ "{% endif %}" }}

                                    <a href="{{ "{{ path('" ~ route_name_prefix ~ "_" ~ action ~ "', params) }}" }}" class="btn btn-default group-tooltip" title="{{ action|capitalize }}" data-placement="top">
                                    {% if action == 'show' %}
                                        <i class="glyphicon glyphicon-eye-open"></i>
                                    {% elseif action == 'edit' %}
                                        <i class="glyphicon glyphicon-edit"></i>
                                    {% endif %}
                                    </a>

                                {%- endfor %}

                                </div>
                            </td>

                        {%- endif %}
                    {%- endfor %}

                        </tr>
                    {{ '{% endfor %}' }}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {{ "{% if pagination is defined %}" }}
        {{ "{% include 'pagination.html.twig' with pagination %}" }}
    {{ "{% endif %}" }}

{{ "{% endblock %}" }}
{% endblock body %}
