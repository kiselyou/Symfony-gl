{% block extends %}
{{ "{% extends 'conteiner.html.twig' %}" }}
{% endblock extends %}

{% block body %}
{{ "{% block content %}" }}

    <div class="page-header">
        <h1>{{ entity_singularized|capitalize }} creation</h1>
    </div>

    <div class="clearfix well-sm">

        {% set hide_edit, hide_show, hide_new, hide_delete = true, true, true, true %}
        {{ include('crud/views/others/record_actions.html.twig.twig') -}}

    </div>

    <div class="clearfix well-sm">

        {{ '{{ form_start(form) }}' }}

        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-left">

            {{ '{{ form_widget(form) }}' }}

            <button type="submit" class="btn-theme btn btn-primary group-tooltip active" title="Create record" data-placement="top">
                <i class="glyphicon glyphicon-floppy-save"></i>
                Create
            </button>

        </div>

        {{ '{{ form_end(form) }}' }}

    </div>

{{ "{% endblock %}" }}
{% endblock body %}
