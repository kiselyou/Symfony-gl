{% extends 'conteiner.html.twig' %}

{% block content %}

    <div class="page-header">
        <h1>Testindex creation</h1>
    </div>

    <div class="clearfix well-sm">

                
    <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6 text-left">
        <a href="{{ path('testindex_index', {'page': app.request.query.get('back')}) }}" class="btn-theme btn btn-default group-tooltip" title="Go to the list" data-placement="top">
            <i class="glyphicon glyphicon-list"></i>
            List
        </a>
    </div>

    <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6 text-right">
    </div>
</div>

