{% extends 'conteiner.html.twig' %}

{% block content %}

    <div class="page-header">
        <h1>Testindices list</h1>
    </div>

    {% set params = null %}
    {% if pagination is defined %}
        {% set params = { 'back': pagination.page } %}
    {% endif %}

    <div class="clearfix well-sm">
            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-left">
                <a href="{{ path('testindex_new', params) }}" class="btn-theme btn btn-default group-tooltip" title="Create a new testIndex" data-placement="right">
                    <i class="glyphicon glyphicon-file"></i>
                    New
                </a>
            </div>
        </div>
    <div class="clearfix well-sm">
        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-left">
            <div class="table-responsive">
                <table class="table table-responsive table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title_1</th>
                            <th>Title_2</th>
                            <th>Description</th>
                            <th>Isactive</th>
                            <th>Deleted</th>
                            <th>Created_at</th>
                            <th>Updated_at</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for testIndex in testIndices %}
                        <tr>
                            <td><a href="{{ path('testindex_show', { 'id': testIndex.id }) }}">{{ testIndex.id }}</a></td>
                            <td>{{ testIndex.title1 }}</td>
                            <td>{{ testIndex.title2 }}</td>
                            <td>{{ testIndex.description }}</td>
                            <td>{% if testIndex.isActive %}Yes{% else %}No{% endif %}</td>
                            <td>{% if testIndex.deleted %}Yes{% else %}No{% endif %}</td>
                            <td>{% if testIndex.createdat %}{{ testIndex.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{% if testIndex.updatedat %}{{ testIndex.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>
                                <div class="btn-group btn-group-sm" style="min-width: 70px">
                                    {% set params = { 'id': testIndex.id } %}

                                    {% if pagination is defined %}
                                        {% set params = { 'id': testIndex.id, 'back': pagination.page } %}
                                    {% endif %}

                                    <a href="{{ path('testindex_show', params) }}" class="btn btn-default group-tooltip" title="Show" data-placement="top">
                                                                            <i class="glyphicon glyphicon-eye-open"></i>
                                                                        </a>
                                    {% set params = { 'id': testIndex.id } %}

                                    {% if pagination is defined %}
                                        {% set params = { 'id': testIndex.id, 'back': pagination.page } %}
                                    {% endif %}

                                    <a href="{{ path('testindex_edit', params) }}" class="btn btn-default group-tooltip" title="Edit" data-placement="top">
                                                                            <i class="glyphicon glyphicon-edit"></i>
                                                                        </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% if pagination is defined %}
        {% include 'pagination.html.twig' with pagination %}
    {% endif %}

{% endblock %}
