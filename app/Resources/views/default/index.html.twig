{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/theme-galaxy.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div id="sw-container"></div>
{% endblock %}

{% block javascripts %}

    <script src="{{ asset('js/core/api/Array.js') }}"></script>
    <script src="{{ asset('js/three/three.js') }}"></script>
    <script src="{{ asset('models/ModelData.js') }}"></script>
    <script src="{{ asset('js/three/loaders/OBJLoader.js') }}"></script>
    <script src="{{ asset('js/three/controls/PlanetControls.js') }}"></script>
    <script src="{{ asset('js/three/controls/OrbitControls.js') }}"></script>
    <script src="{{ asset('js/three/controls/ModelControls.js') }}"></script>


    <script>
        document.addEventListener("DOMContentLoaded", function () {

            var SW_CONTAINER = 'sw-container';
            var width = window.innerWidth;
            var height = window.innerHeight;
            var aspect =  width / height;

            var scene = new THREE.Scene();
            var renderer = new THREE.WebGLRenderer();
            renderer.setSize( width, height );

            var camera = new THREE.PerspectiveCamera( 45, aspect, 0.1, 100000000 );
            camera.aspect = aspect;

            //new THREE.Vector3( 961665.2224137047, 0, 961665.2224137045 )
            //new THREE.Vector3( 40948553.69851297, 0, 40948553.698512964 )

            // var START_PLANET = Math.PI / 4;
            // var distance = 57910000;
            // var x = distance * Math.cos(START_PLANET);
            // var z = distance * Math.sin(START_PLANET);
            // x + ' = ' + z

            camera.position.x = 100;
            camera.position.z = 100;
            camera.position.y = 100;

            var container = document.getElementById( SW_CONTAINER );

            var hemiLight = new THREE.HemisphereLight( 0xffffff, 0xffffff, 0.6 );
            hemiLight.color.setHSL( 0.6, 1, 0.6 );
            hemiLight.groundColor.setHSL( 0.095, 1, 0.75 );
            hemiLight.position.set( 0, 500, 0 );
            scene.add( hemiLight );
            //
            var dirLight = new THREE.DirectionalLight( 0xffffff, 1 );
            dirLight.color.setHSL( 0.1, 1, 0.95 );
            dirLight.position.set( -1, 1.75, 1 );
            dirLight.position.multiplyScalar( 50 );
            scene.add( dirLight );
            dirLight.castShadow = true;
            dirLight.shadow.mapSize.width = 2048;
            dirLight.shadow.mapSize.height = 2048;

            var d = 50;
            dirLight.shadow.camera.left = -d;
            dirLight.shadow.camera.right = d;
            dirLight.shadow.camera.top = d;
            dirLight.shadow.camera.bottom = -d;
            dirLight.shadow.camera.far = 3500;
            dirLight.shadow.bias = -0.0001;

            var orbitControl = new THREE.OrbitControls( camera, renderer.domElement );
            orbitControl.minDistance = 120;
            orbitControl.keyPanSpeed = 70;
            orbitControl.maxPolarAngle = 75 * Math.PI / 180;
            orbitControl.maxDistance = 50;
//            orbitControl.target.copy(new THREE.Vector3( 108873.53133227957, 0, 108873.53133227957 ));

            var geometry = new THREE.BoxGeometry( 5, 5, 5 );
            var material = new THREE.MeshLambertMaterial( { color: 0xffff00 } );
            var model = new THREE.Mesh( geometry, material );
            scene.add( model );

            var modelControls = new THREE.ModelControls( camera, model, renderer.domElement, container );
            var planeGeometry = new THREE.PlaneGeometry(100000, 100000);
            var planeMaterial = new THREE.MeshLambertMaterial({ color: 0xffffff, opacity: 0, transparent: true });
            var plane = new THREE.Mesh(planeGeometry, planeMaterial);
            plane.rotation.x = -0.5 * Math.PI;
            scene.add(plane);
            model.add( plane );
            modelControls.scene = scene;
            modelControls.mouseMoveModel( plane );

            var planetControls = new THREE.PlanetControls( scene, camera );
            planetControls.load( true, function ( a, b ) {
                console.log( a, b );
            } );

            // HELPERS
            var axis = new THREE.AxisHelper( 10 );
            scene.add( axis );

            var color = new THREE.Color(0x00ffff);
            var grid = new THREE.GridHelper( 100, 10, color, 0x888888);
            scene.add( grid );

            container.appendChild( renderer.domElement );
            window.addEventListener( 'resize', windowResize, false );
            render();

            function windowResize () {
                camera.updateProjectionMatrix();
                renderer.setSize( width, height );
            }

            function render () {
                requestAnimationFrame( render );
                renderer.render( scene, camera );
                planetControls.update();

                if (modelControls) {
                    modelControls.update();
                }

                if (orbitControl && model) {
                    orbitControl.target.copy(model.position);
                    orbitControl.update();
                }
            }
        });
    </script>
{% endblock %}
