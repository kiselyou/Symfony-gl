    <script>
        document.addEventListener("DOMContentLoaded", function () {

            var SW_CONTAINER = 'sw-container';
            var width = window.innerWidth;
            var height = window.innerHeight;
            var aspect =  width / height;

            var scene = new THREE.Scene();
            var renderer = new THREE.WebGLRenderer();



            var camera = new THREE.PerspectiveCamera( 45, aspect, 0.1, 1000000 );
            camera.aspect = aspect;
            camera.position.x = 100;
            camera.position.z = 100;
            camera.position.y = 100;


            var mapCamera, mapWidth = 240, mapHeight = 160;
            mapCamera = new THREE.OrthographicCamera( width / - 2, width / 2, height / 2, height / - 2, -10000, 10000 );
            mapCamera.up = new THREE.Vector3(0,0,-1);
            mapCamera.lookAt( new THREE.Vector3(0,-1,0) );
            scene.add(mapCamera);







