{% extends 'conteiner.html.twig' %}

{% block content %}

    <div class="page-header">
        <h1>Helpers list</h1>
    </div>

    {% set params = null %}

    {% if pagination is defined %}
        {% set params = { 'back': pagination.page } %}
    {% endif %}

    <div class="well-sm">
        <a href="{{ path('helper_new', params) }}" class="btn-theme btn btn-primary group-tooltip active" title="Create a new helper" data-placement="right">
            <i class="glyphicon glyphicon-file"></i>
            Create
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-responsive table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Command</th>
                    <th>Description</th>
                    <th>Isactive</th>
                    <th>Deleted</th>
                    <th>Created_at</th>
                    <th>Updated_at</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for helper in helpers %}
                <tr>
                    <td><a href="{{ path('helper_show', { 'id': helper.id }) }}">{{ helper.id }}</a></td>
                    <td>{{ helper.title }}</td>
                    <td>{{ helper.command }}</td>
                    <td>{{ helper.description }}</td>
                    <td>{% if helper.isActive %}Yes{% else %}No{% endif %}</td>
                    <td>{% if helper.deleted %}Yes{% else %}No{% endif %}</td>
                    <td>{% if helper.createdat %}{{ helper.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if helper.updatedat %}{{ helper.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        {% set params = { 'id': helper.id } %}

                        {% if pagination is defined %}
                            {% set params = { 'id': helper.id, 'back': pagination.page } %}
                        {% endif %}

                        <div class="btn-group btn-group-sm" style="min-width: 70px">
                            <a href="{{ path('helper_show', params) }}" class="btn btn-default group-tooltip" title="Show" data-placement="top">
                                <i class="glyphicon glyphicon-eye-open"></i>
                            </a>
                            <a href="{{ path('helper_edit', params) }}" class="btn btn-default group-tooltip" title="Edit" data-placement="top">
                                <i class="glyphicon glyphicon-edit"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% if pagination is defined %}
        {% include 'pagination.html.twig' with pagination %}
    {% endif %}

{% endblock %}