{% extends 'container.html.twig' %}

{% block content %}

    <div class="page-header">
        <h1>Helper edit</h1>
    </div>

    <div class="clearfix well-sm">

                
    <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6 text-left">
        <a href="{{ path('helper_index', {'page': app.request.query.get('back')}) }}" class="btn-theme btn btn-default element-tooltip" title="Go to the list" data-placement="top">
            <i class="glyphicon glyphicon-list"></i>
            List
        </a>
    </div>

    <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6 text-right">
            {{ form_start(delete_form) }}
                <a href="{{ path('helper_show', { 'id': helper.id }) }}" class="btn-theme btn btn-default element-tooltip" title="Show record" data-placement="top">
                    <i class="glyphicon glyphicon-eye-open"></i>
                    Show
                </a>
                <a href="{{ path('helper_new') }}" class="btn-theme btn btn-default element-tooltip" title="Create new record" data-placement="top">
                    <i class="glyphicon glyphicon-file"></i>
                    New
                </a>
            <button type="submit" class="btn-theme btn btn-danger element-tooltip active" title="Delete this record" data-placement="top">
                <i class="glyphicon glyphicon-trash"></i>
                Delete
            </button>

            {{ form_end(delete_form) }}
    </div>
</div>

    <div class="clearfix well-sm">

        {{ form_start(edit_form) }}

        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-left">

            {{ form_widget(edit_form) }}

            <button type="submit" class="btn-theme btn btn-primary element-tooltip active" title="Update this record" data-placement="top">
                <i class="glyphicon glyphicon-floppy-save"></i>
                Edit
            </button>

        </div>

        {{ form_end(edit_form) }}

    </div>

{% endblock %}
