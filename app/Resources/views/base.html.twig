<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome to Galaxy!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" />
            <link href="{{ asset('css/theme.css') }}" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('galaxy.ico') }}" />
        {# Initialisation TINYMCE #}
        {{ tinymce_init({theme: { 'simple': { 'language': app.request.locale } } }) }}
    </head>
    <body>
        {% block header %}{% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}{% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/jquery-3.1.1.js') }}"></script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>
            <script>
                $( document ).ready(function() {
                    $('.group-tooltip')
                            .tooltip({container: 'body'});

                    $('.element-tooltip')
                            .tooltip();

                    $('.table-popover').popover();

                    $('tr[data-go-to]').each(function () {
                        $( this ).dblclick(function() {
                            window.location.href = $( this ).attr('data-go-to');
                        })
                    });

                    setTimeout(function () {
                        $('.load-container').css('opacity', 1);
                    }, 100);
                });

            </script>
        {% endblock %}

    </body>
</html>
