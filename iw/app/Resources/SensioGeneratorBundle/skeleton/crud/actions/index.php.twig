    /**
{% block phpdoc_method_header %}
     * Lists all {{ entity_singularized }} entities.
{% endblock phpdoc_method_header %}
     *
{% block phpdoc_method_annotations %}
{% if 'annotation' == format %}
     * @Route("/", name="{{ route_name_prefix }}_index")
     * @Method("GET")
{% endif %}
{% endblock phpdoc_method_annotations %}
     */
{% block method_definition %}
    public function indexAction($page)
{% endblock method_definition %}
    {
{% block method_body %}
        $max = 50;
        $em = $this->getDoctrine()->getManager();

        $query = $em
            ->createQuery("SELECT p FROM {{ bundle }}:{{ entity }} p")
            ->setFirstResult($max * ($page < 1 ? 0: $page - 1))
            ->setMaxResults($max);

        $paginator = 'Doctrine\ORM\Tools\Pagination\Paginator';
        $pg = new $paginator($query);
{% endblock method_body %}

{% block method_return %}
        return $this->render('{{ entity|lower|replace({'\\': '/'}) }}/index.html.twig', array(
            '{{ entity_pluralized }}' => $query->getResult(),
            'pagination' => [
                'page' => $page,
                'route' => '{{ route_name_prefix }}_index',
                'count' => ceil($pg->count() / $max)
            ]
        ));
{% endblock method_return %}
    }
